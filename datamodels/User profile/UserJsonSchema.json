{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://fiware.github.io/dataModels/userprofile/schema.json",
  "title": "User profile JSON Schema",
  "description": "This file describes the json schema of user profile",
  "type": "object",
      "properties": {
        "id": {
          "description": "Entity's unique identifier",
		  "type": "integer"
        },
        "name": {
          "description": "The name of user",
		  "type": "string"          
        },
		"familyName": {
          "description": "The last name of user",
		  "type": "string"          
        },
		"gender": {
          "description": "The gender of user",
		  "type": "string"          
        },
		"birthDate": {
          "description": "The date of birth of user",
		  "type": "string"          
        },
		"dateCreated": {
		  "type": "string",
		  "format": "date-time"           
        },
		"dateModified": {
		  "type": "string",
		  "format": "date-time"           
        }
	},
	 "homeAdress": {
      "type": "object",
      "properties": {
        "location": { "$ref": "http://json-schema.org/geojson/geometry.json#" },
        "address": {
          "type": "object",
          "properties": {
            "addressCountry": {
              "type": "string"
            },
            "addressRegion": {
            "type": "string"
            },
            "addressLocality": {
            "type": "string"
            },
			"streetAddress": {
            "type": "string"
            },
            "postalCode": {
            "type": "string"
            }
          }
        }
      }
    },
	
	"workAdress": {
      "type": "object",
      "properties": {
        "location": { "$ref": "http://json-schema.org/geojson/geometry.json#" },
        "address": {
          "type": "object",
          "properties": {
            "addressCountry": {
              "type": "string"
            },
            "addressRegion": {
              "type": "string"
            },
            "addressLocality": {
              "type": "string"
            },
			"streetAddress": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            }
          }
        }
      }
    }
}
